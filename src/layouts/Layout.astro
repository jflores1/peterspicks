---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <nav>
                <div class="logo">Conclave Tracker</div>
                <div class="nav-links">
                    <a href="/">Home</a>
                    <a href="/about">About</a>
                    <a href="/predictions">AI Predictions</a>
                </div>
            </nav>
        </header>

        <slot />

        <footer>
            <p>
                Â© {new Date().getFullYear()} Conclave Tracker - An AI-powered project
            </p>
            <p class="disclaimer">
                This site is for educational and entertainment purposes only.
            </p>
        </footer>
    </body>
</html>

<style is:global>
    :root {
        --font-size-base: 1rem;
        --color-primary: #722f37;
        --color-text: #444444;
        --color-text-light: #666666;
        --color-bg: #ffffff;
        --color-bg-offset: #f8f8f8;
        --color-border: #eeeeee;
    }

    html {
        font-family: system-ui, sans-serif;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);
    }

    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    header {
        background-color: var(--color-primary);
        color: white;
        padding: 1rem;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .logo {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .nav-links a {
        color: white;
        text-decoration: none;
        margin-left: 1.5rem;
    }

    .nav-links a:hover {
        text-decoration: underline;
    }

    main {
        flex-grow: 1;
    }

    footer {
        background-color: var(--color-bg-offset);
        color: var(--color-text-light);
        text-align: center;
        padding: 1.5rem;
        margin-top: 2rem;
    }

    .disclaimer {
        font-size: 0.8rem;
    }
</style>
