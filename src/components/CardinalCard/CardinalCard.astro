---
export interface Props {
    cardinal: any;
}

const { cardinal } = Astro.props;
---

<div class="cardinal-card">
    <div class="cardinal-image">
        <img src={cardinal.data.image} alt={`Cardinal ${cardinal.data.name}`} />
    </div>
    <div class="cardinal-info">
        <h2>{cardinal.data.name}</h2>
        <p class="title">{cardinal.data.title}</p>
        <div class="stats">
            <div class="stat">
                <span class="label">Country:</span>
                <span class="value">{cardinal.data.country}</span>
            </div>
            <div class="stat">
                <span class="label">Age:</span>
                <span class="value">{cardinal.data.age}</span>
            </div>
            <div class="stat">
                <span class="label">Cardinal since:</span>
                <span class="value">{cardinal.data.created_cardinal}</span>
            </div>
            {
                cardinal.data.papal_probability && (
                    <div class="stat">
                        <span class="label">Papal Probability:</span>
                        <span class="value">
                            {(cardinal.data.papal_probability * 100).toFixed(1)}
                            %
                        </span>
                    </div>
                )
            }
        </div>
        {
            cardinal.data.is_papabile && (
                <div class="papabile-badge">Papabile</div>
            )
        }
        <div class="tags">
            {
                cardinal.data.tags &&
                    cardinal.data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                    ))
            }
        </div>
        <div class="bio-preview">
            <p>{cardinal.body.substring(0, 150)}...</p>
            <a href={`/cardinals/${cardinal.slug}`}>Read more</a>
        </div>
    </div>
</div>

<style>
    .cardinal-card {
        display: flex;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        background: white;
        transition: transform 0.2s;
    }

    .cardinal-card:hover {
        transform: translateY(-4px);
    }

    .cardinal-image {
        width: 150px;
        height: 200px;
        overflow: hidden;
    }

    .cardinal-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .cardinal-info {
        padding: 16px;
        flex: 1;
    }

    h2 {
        margin: 0 0 4px 0;
        color: #722f37; /* Cardinal red */
    }

    .title {
        font-style: italic;
        margin: 0 0 10px 0;
        color: #555;
    }

    .stats {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 8px;
        margin-bottom: 12px;
    }

    .label {
        font-weight: bold;
        color: #555;
    }

    .papabile-badge {
        display: inline-block;
        background: #722f37;
        color: white;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 0.8rem;
        margin-bottom: 8px;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 12px;
    }

    .tag {
        background: #f0f0f0;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.8rem;
    }

    .bio-preview {
        font-size: 0.9rem;
        color: #444;
    }
</style>
